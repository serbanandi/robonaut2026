{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Build",
      "type": "shell",
      "command": "./Scripts/cmake-build.ps1",
      "args": [
        "${input:buildType}",
        "${config:stm32.programmerPath}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "STM32: Flash FSBL",
      "type": "shell",
      "command": "Scripts/upload-fsbl.ps1",
      "args": [
        "${input:buildType}",
        "${config:stm32.programmerPath}",
        "${config:stm32.projectName}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "STM32: Flash Application",
      "type": "shell",
      "command": "${config:stm32.programmerPath}/STM32_Programmer_CLI",
      "args": [
        "-c",
        "port=SWD",
        "mode=Normal",
        "-w",
        "${workspaceFolder}/Appli/build/${input:buildType}/${config:stm32.projectName}_Appli.elf",
        "-v",
        "-el",
        "${workspaceFolder}/MemLoader/RobonAUT_FSBL_XIP_ExtMemLoader.stldr",
        "-hardRst"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "buildType",
      "type": "pickString",
      "description": "Select the build type",
      "options": [
        "Debug",
        "Release"
      ],
      "default": "Debug"
    }
  ]
}