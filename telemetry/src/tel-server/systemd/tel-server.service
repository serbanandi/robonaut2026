[Unit]
Description=UART Telemetry Server Service
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/tel-server /dev/serial0 921600

Restart=always
RestartSec=5

User=root
Group=root

# Logging: Output stdout/stderr to system journal
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target